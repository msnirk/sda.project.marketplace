<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="sda.project.marketplace" table="Users">
        <id name="id" column="user_id" type="int">
            <generator class="native"></generator>
        </id>
        <property name="firstName" column="name" type="string"/>
        <property name="lastName" column="surname" type="string"/>
        <property name="username" column="username" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="password" column="password" type="string"/>
        <set name="Wallet" cascade="all">
            <key column="values_id"></key>
            <one-to-many class="sda.project.marketplace.Wallet"/>
        </set>
    </class>
</hibernate-mapping>